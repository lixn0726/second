<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.notme.second.universal.services.user.mapper.UserMapper">
    <select id="queryUserById" parameterType="java.lang.Integer"
            resultType="com.notme.second.universal.services.user.po.User">
        select *
        from second.t_user
        where id = ${userId}
    </select>
</mapper>